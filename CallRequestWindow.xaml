<Window x:Class="Vet_Clinic.CallRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Замовити дзвінок" Height="280" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0">
    <Border Margin="20,20,20,-6" Padding="20" Background="White" CornerRadius="8"
            BorderBrush="#ccc" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Замовлення дзвінка" FontSize="20" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#2c3e50"/>

            <TextBlock Text="Ваше ім’я:"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneBox" Margin="0,0,0,20"/>

            <Button Content="Замовити" Height="35" Background="#27ae60" Foreground="White"
                    FontWeight="Bold" Click="SubmitCall_Click"/>
        </StackPanel>
    </Border>
</Window>
